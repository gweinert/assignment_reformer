<% @user.errors.full_messages.each do |i| %>
<%= "#{i}" %><br>
<% end %>
<br>


<%= form_for(@user) do |f| %>
<%= f.label(:Username) %><br>
<%= f.text_field(:username) %>
<%= "Username #{@user.errors[:username][0]}" if @user.errors[:username] %><br>
<%= f.label("Electronic-mail") %><br>
<%= f.email_field(:email) %>
<%= "Email #{@user.errors[:email][0]}" if @user.errors[:email] %><br>
<%= f.label(:Password) %><br>
<%= f.password_field(:password) %>
<%= "Password #{@user.errors[:password][0]}" if @user.errors[:password] %><br>
<%= f.submit("Submit") %>

<% end %>
